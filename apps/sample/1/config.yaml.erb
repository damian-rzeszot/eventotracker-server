---

home:
  image: <%= uri("/sample/home.png?w=\#{width}&h=\#{height}&s=\#{scale}") %>

entrants_list:
  url: <%= url("/#{@app_name}/#{@event_id}/entrants") %>
  follow: http://eventotracker.com/api/v1/api.cfm/follow

entrants_details:
  url: <%= url("/#{@app_name}/#{@event_id}/entrants/\#{id}/details") %>

tracking:
  update_freq: 180
  data: <%= url("/#{@app_name}/#{@event_id}/predictions") %>
  paths:
    - name: test
      url: <%= url("/maps/test.geojson") %>

more:
  items:
    - title: Results 2019
      type: link
      link:
        url: https://www.sportsplits.com/races/DHIOceania2020
    - title: Schedule
      type: link
      link:
        url: https://www.christchurchmarathon.co.nz/race-info
    - title: Leaderboard
      type: link
      link:
        url: https://www.christchurchmarathon.co.nz/race-info
    - title: Event Schedule
      type: schedule
      schedule:
        url: <%= url("/#{@app_name}/#{@event_id}/schedule") %>
    - title: Carousel 1
      type: carousel
      carousel:
        url: https://raw.githubusercontent.com/eventonz/eventonz.github.io/main/carousel1.json
    - title: Feed
      type: feed
      feed:
        url: <%= uri("/sample/1/feed") %>
    - title: "List page"
      type: pages
      pages:
        url: <%= uri("/sample/1/pages") %>
    - title: Actions
      type: actions
      actions:
        url: <%= uri("/sample/1/actions/sample") %>

theme:
  accent:
    dark: "#99004E"
    light: "#d71085"
