---

home:
  image: <%= uri("/sample/home.png?w=\#{width}&h=\#{height}&s=\#{scale}") %>

entrants_list:
  url: <%= url("/#{@app_name}/#{@event_id}/entrants") %>
  follow: http://eventotracker.com/api/v1/api.cfm/follow

entrants_details:
  url: <%= url("/#{@app_name}/#{@event_id}/entrants/\#{id}/details") %>

tracking:
  update_freq: 180
  data: <%= url("/#{@app_name}/#{@event_id}/predictions") %>
  paths:
    - name: test
      url: <%= url("/maps/test.geojson") %>

more:
  items:
  - type: link
    link:
      title: Results 2019
      url: https://www.sportsplits.com/races/DHIOceania2020
  - type: link
    link:
      title: Schedule
      url: https://www.christchurchmarathon.co.nz/race-info
  - type: link
    link:
      title: Leaderboard
      url: https://www.christchurchmarathon.co.nz/race-info
  - type: schedule
    schedule:
      title: Event Schedule
      source: http://eventotracker.com/api/samplejson/schedule.json

theme:
  accent:
    dark: "#99004E"
    light: "#d71085"
