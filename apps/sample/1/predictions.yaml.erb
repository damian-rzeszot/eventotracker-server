<%

def path(track)
  id = (track + 1) % 2 + 1
  "stage-#{id}"
end

def speed(track)
  ((track % 5 == 0 ? 0.0 : 20.0) + (track % 5)) / 20
end

def location(track)
  12
end

%>
---
predictions:
  <% @tracks.each do |track| %>
    - track: <%= track %>
      speed: <%= speed(track) %>
      location: <%= location(track)%>
      path: <%= path(track) %>
  <% end %>
